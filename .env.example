# ===================================
# Global Configuration
# ===================================
# This .env file provides global configuration for all users.
# No per-user environment variables - single instance setup.

# ===================================
# Odoo Configuration (REQUIRED)
# ===================================
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_database_name
ODOO_USERNAME=admin
ODOO_PASSWORD=your_password_or_api_key
ODOO_TIMEOUT=30
ODOO_VERIFY_SSL=true

# ===================================
# LLM Provider (choose one or more)
# ===================================
OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ===================================
# Service Configuration
# ===================================
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
CHAINLIT_PORT=8080

# ===================================
# Caching & Performance
# ===================================
REDIS_URL=redis://localhost:6379/0
MODEL_CACHE_TTL=300  # seconds (5 minutes)

# ===================================
# Security
# ===================================
API_KEY_ENABLED=true
ADMIN_API_KEY=your-secure-random-key-here
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ===================================
# Features
# ===================================
ENABLE_FILE_UPLOADS=true
MAX_FILE_SIZE_MB=10

# ===================================
# Logging
# ===================================
LOG_LEVEL=INFO
LOG_FILE=logs/odoo_agent.log
AUDIT_LOG=logs/actions_audit.log

# ===================================
# Chainlit Authentication
# ===================================
# JWT secret for session management (generate with: chainlit create-secret)
CHAINLIT_AUTH_SECRET=your-jwt-secret-here
# Login credentials for web UI
CHAINLIT_AUTH_USER=admin
CHAINLIT_AUTH_PASSWORD=your-secure-password
